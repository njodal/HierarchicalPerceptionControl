general:
  name: Tests for CarControl.py

  tests:
    - test:
        call: test_positional_control
        cases:
          - case:
              desc:   PID
              input:  [10, 4, 0.1, 100, {type: PID, name: position, gains:[0.5, 0.0, 0.3]}, {type: PID, name: speed, gains: [2.0, 0.2, 0.0]}, True]
              output: 9.98
          - case:
              desc:   pcu, tuned by hand
              input:  [10, 4, 0.1, 100, {'type': PCU, 'name': position, gains:[0.5]}, {'type':PCU, 'name':speed, gains:[2.0]}, True]
              output: 9.98
          - case:
              desc:   positional control adaptive
              input:  [10, 4, 0.1, 100, {'type':AdaptiveP, 'name':position}, {'type':PCU, 'name':speed, gains:[2.0]}, True]
              output: 9.98

    - test:
        call: test_speed_control
        cases:
          - case:
              desc:   pcu, tuned by hand
              input:  [10, 4, 0.1, 100, {'type':PCU, 'name':speed, gains:[2.0]}, False]
              output: 10.0
          - case:
              desc:   adaptive
              input:  [3.0, 3, 0.1, 1000, {'type':AdaptiveP, 'name':speed, 'learning_rate': 0.01, 'decay_rate': 0.0, 'past_length':10, 'gain':0.1, 'debug': True}, True]
              output: 3.0

    - test:
        call: test_auto_tune_speed_control
        cases:
          - case:
              input:  ['simple', 4, 5.0, 0.1, 500, [[0, 5], [300, 2], [350, 7], [420, 3]], [], {'type':PID, 'name':speed, gains:[1.0, 0.0, 0.0]}, True]
              output: [1.71, 0.15, 0.26]
          - case:
              input:  ['simple', 4, 5.0, 0.1, 500, [[0, 5], [300, 2], [350, 7], [400, 6], [410, 5], [420, 3]], [[100, 10], [200, -10], [300, 0]], {'type':PID, 'name':speed, gains:[1.0, 0.0, 0.0]}, False]
              output: [1.71, 0.15, 0.26]
          - case:
              input:  ['simple', 4, 5.0, 0.1, 5, [[0, 5], [300, 2], [350, 7], [400, 6], [410, 5], [420, 3]], [[100, 10], [200, -10], [300, 0]], {'type':IncrementalPID, 'name':speed, gains:[1.0, 0.0, 0.0]}, False]
              output: [2.0, 0.01, 4.0]
